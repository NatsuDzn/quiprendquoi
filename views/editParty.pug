include ../partials/header.pug
.container
  a(href='/')
    h1 Qui prend quoi ? 🎉
  h2 Modification de l'event

  div
    form(method="post" action=`/party/${party._id}?_method=PATCH`)
      .newParty__fields
        label(for="name") Nom de l'événement
        input(name="name" id="name" required minlength="3" value=`${party.name}` placeholder="Nouvel an")
      .newParty__fields
        label(for="author") Votre prénom
        input(name="author" id="author" required minlength="3" value=`${party.author}` placeholder="Nathanael")
      button(type="submit") ✏️Edit

include ../partials/footer.pug
